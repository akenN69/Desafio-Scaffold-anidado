<h1>Playlists</h1>

<%= link_to 'New Playlist', new_playlist_path, class:"btn btn-info" %>

<div class="container">
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th>PlayList</th>
        <th>User</th>
        <th>Songs</th>
        
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @playlists.each do |playlist| %>
        <tr>
          <td><%= playlist.name %></td>
          <td><%= playlist.user.name %></td>
          <td><%= playlist.song.count %></td>
          <td><%= link_to 'Show', playlist, class:"btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_playlist_path(playlist), class:"btn btn-success" %></td>
          <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

